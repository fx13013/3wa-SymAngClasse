{% extends 'base.html.twig' %}

{% block title %}Liste des élèves{% endblock %}

{% block body %}
    <main class="container mt-3">
        <h1>Liste des élèves ({{students|length}})</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Classe</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for student in students %}
                <tr>
                    <td># {{student.id}}</td>
                    <td>{{student.nom | upper}} {{student.prenom}}</td>
                    <td>{{student.classroom.name}}</td>
                    <td>
                        <a href="{{path('admin_student_edit', {id:student.id})}}" class="btn btn-info">Modifier</a>
                        <a href="{{path('admin_student_delete', {id:student.id})}}" class="btn btn-warning">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}
